{
  "name": "mern-shop",
  "version": "1.0.0",
  "description": "eCommerce app build with the MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
