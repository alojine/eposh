  },
  "homepage": "https://github.com/alojine/proshop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "mongoose": "^7.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.1.0",
    "dotenv": "^16.1.3",
    "nodemon": "^2.0.22"
  }
}
